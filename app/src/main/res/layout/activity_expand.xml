<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_expand_leftmargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左边距离到底是什么呢？"
        android:textSize="@dimen/deimen_14x"/>


    <Button
        android:id="@+id/btn_expand_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/deimen_30x"
        android:text="吐司1"/>

    <Button
        android:id="@+id/btn_expand_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_expand_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/deimen_10x"
        android:text="吐司2"/>


</RelativeLayout>
